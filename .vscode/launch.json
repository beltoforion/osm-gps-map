    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch (live server)",
            // Live Server Port is 5500!            
            "url": "http://localhost:5500/dist/osm-gps-map.html",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch (localhost)",
            "url": "file://${workspaceRoot}/dist/osm-gps-map.html",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}"
        }
    ]
}